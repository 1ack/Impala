+package org.apache.hive.beeline;
+
+import org.junit.Assert;
+import org.junit.Test;
+
+public class TestBeeLineVarSubstitution {
+
+  @Test
+  public void testSystemVarSubstitution() throws Throwable {
+    String cmd = "!${system:MY_CMD}";
+    BeeLine bl = new BeeLine();
+    boolean result = bl.dispatch( cmd );
+    Assert.assertFalse( result );
+
+    System.setProperty( "MY_CMD", "help" );
+    result = bl.dispatch( cmd );
+    Assert.assertTrue( result );
+  }
